<form method="post" action="{{ path('app_voyage_delete', {'id': voyage.id}) }}" 
      onsubmit="return confirm('Êtes-vous absolument sûr de vouloir supprimer ce voyage ? Cette action ne peut pas être annulée.');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ voyage.id) }}">
    <button type="submit" class="btn btn-outline-danger btn-sm fw-semibold w-100">
        <i class="bx bx-trash me-2"></i>
        Supprimer définitivement
    </button>
</form>
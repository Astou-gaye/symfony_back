{% extends 'base.html.twig' %}

{% block title %}Clients - Moubarack Voyages{% endblock %}

{% block page_title %}
    <i class="bx bx-user me-2"></i>Gestion des Clients
{% endblock %}

{% block body %}

<!-- Statistiques en haut -->
<div class="row mb-4 g-3">
    <div class="col-md-6 col-xl-3">
        <div class="card border-0 shadow-sm rounded-4 text-center p-4 h-100 position-relative overflow-hidden">
            <div class="position-absolute top-0 end-0 p-3 opacity-10">
                <i class="bx bx-user fs-1"></i>
            </div>
            <div class="text-muted small mb-2 fw-medium">Clients Total</div>
            <div class="fs-2 fw-bold text-primary mb-0">{{ clients|length }}</div>
            <div class="small text-success mt-1">
                <i class="bx bx-trending-up me-1"></i>Actif
            </div>
        </div>
    </div>
    <div class="col-md-6 col-xl-3">
        <div class="card border-0 shadow-sm rounded-4 text-center p-4 h-100 position-relative overflow-hidden">
            <div class="position-absolute top-0 end-0 p-3 opacity-10">
                <i class="bx bx-user-plus fs-1"></i>
            </div>
            <div class="text-muted small mb-2 fw-medium">Nouveaux Cette Semaine</div>
            <div class="fs-2 fw-bold text-success mb-0">+7</div>
            <div class="small text-muted mt-1">
                <i class="bx bx-calendar me-1"></i>7 derniers jours
            </div>
        </div>
    </div>
    <div class="col-md-6 col-xl-3">
        <div class="card border-0 shadow-sm rounded-4 text-center p-4 h-100 position-relative overflow-hidden">
            <div class="position-absolute top-0 end-0 p-3 opacity-10">
                <i class="bx bx-male-female fs-1"></i>
            </div>
            <div class="text-muted small mb-2 fw-medium">Répartition H/F</div>
            <div class="fs-2 fw-bold text-info mb-0">60/40</div>
            <div class="small text-muted mt-1">
                <i class="bx bx-pie-chart-alt me-1"></i>Pourcentage
            </div>
        </div>
    </div>
    <div class="col-md-6 col-xl-3">
        <div class="card border-0 shadow-sm rounded-4 text-center p-4 h-100 position-relative overflow-hidden">
            <div class="position-absolute top-0 end-0 p-3 opacity-10">
                <i class="bx bx-world fs-1"></i>
            </div>
            <div class="text-muted small mb-2 fw-medium">Nationalités</div>
            <div class="fs-2 fw-bold text-warning mb-0">12</div>
            <div class="small text-muted mt-1">
                <i class="bx bx-flag me-1"></i>Pays différents
            </div>
        </div>
    </div>
</div>

<!-- Barre de recherche et filtres -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card border-0 shadow-sm rounded-4">
            <div class="card-body p-3">
                <div class="row g-3 align-items-center">
                    <div class="col-md-4">
                        <div class="input-group">
                            <span class="input-group-text bg-light border-0">
                                <i class="bx bx-search text-muted"></i>
                            </span>
                            <input type="text" class="form-control border-0 bg-light" placeholder="Rechercher un client...">
                        </div>
                    </div>
                    <div class="col-md-3">
                        <select class="form-select border-0 bg-light">
                            <option>Toutes nationalités</option>
                            <option>Sénégalaise</option>
                            <option>Française</option>
                            <option>Malienne</option>
                        </select>
                    </div>
                    <div class="col-md-2">
                        <select class="form-select border-0 bg-light">
                            <option>Tous sexes</option>
                            <option>Homme</option>
                            <option>Femme</option>
                        </select>
                    </div>
                    <div class="col-md-3 text-end">
                        <a href="{{ path('app_client_new') }}" class="btn btn-primary shadow-sm rounded-3 px-4 py-2 fw-semibold">
                            <i class="bx bx-plus-circle me-2"></i>Nouveau Client
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Tableau des clients -->
<div class="card shadow-sm border-0 rounded-4">
    <div class="card-header bg-white py-4 px-4 border-bottom">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h5 class="mb-1 fw-bold text-dark">
                    <i class="bx bx-user-circle me-2 text-primary"></i>Liste des Clients ({{ clients|length }})
                </h5>
                <p class="text-muted small mb-0">Gérez vos clients et leurs informations</p>
            </div>
            <div class="d-flex gap-2">
                <button class="btn btn-sm btn-outline-secondary rounded-3">
                    <i class="bx bx-export me-1"></i>Exporter
                </button>
                <button class="btn btn-sm btn-outline-primary rounded-3">
                    <i class="bx bx-filter me-1"></i>Filtrer
                </button>
            </div>
        </div>
    </div>

    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="ps-4 py-3 border-0 fw-semibold text-muted text-uppercase small">Client</th>
                        <th class="py-3 border-0 fw-semibold text-muted text-uppercase small"></th>
                        <th class="py-3 border-0 fw-semibold text-muted text-uppercase small">Naissance</th>
                        <th class="py-3 border-0 fw-semibold text-muted text-uppercase small">Nationalité</th>
                        <th class="py-3 border-0 fw-semibold text-muted text-uppercase small">Sexe</th>
                        <th class="py-3 border-0 fw-semibold text-muted text-uppercase small text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for client in clients %}
                    <tr class="border-bottom border-light">
                        <td class="ps-4 py-3">
                            <div class="d-flex align-items-center gap-3">
                                <div class="position-relative">
                                    <div class="rounded-circle bg-primary text-white d-flex align-items-center justify-content-center shadow-sm" style="width: 40px; height: 40px; font-weight: 600; font-size: 0.85rem;">
                                       {{ client.prenom[:2]|upper }}
                                    </div>
                                    <div class="position-absolute bottom-0 end-0 bg-success rounded-circle border-2 border-white" style="width: 10px; height: 10px;"></div>
                                </div>
                                <div>
                                    <div class="fw-semibold text-dark mb-1">{{ client.prenom }} {{ client.nom }}</div>
                                    <div class="small text-muted">
                                        <i class="bx bx-map-pin me-1"></i>{{ client.adresse ?: 'Dakar, Sénégal' }}
                                    </div>
                                </div>
                            </div>
                        </td>
                        <td class="py-3">
                            <div class="small">
                                <div class="text-dark mb-1">
                                    <i class="bx bx-envelope me-1 text-muted"></i>
                                </div>
                                <div class="text-muted">
                                    <i class="bx bx-phone me-1"></i>
                                </div>
                            </div>
                        </td>
                        <td class="py-3">
                            {% if client.dateNaissance %}
                                <div class="fw-medium text-dark">{{ client.dateNaissance|date('d/m/Y') }}</div>
                                <div class="small text-muted">
                                    {{ 'now'|date('Y') - client.dateNaissance|date('Y') }} ans
                                </div>
                            {% else %}
                                <div class="fw-medium text-dark">25/06/1990</div>
                                <div class="small text-muted">{{ 34 - (loop.index0 % 20) }} ans</div>
                            {% endif %}
                        </td>
                        <td class="py-3">
                            <span class="badge bg-light border text-dark rounded-pill px-3 py-2 fw-medium">
                                <i class="bx bx-flag me-1"></i>
                                {{ client.nationalite ?: 'Sénégalaise' }}
                            </span>
                        </td>
                        <td class="py-3">
                            {% if client.sexe == 'M' %}
                                <div class="d-flex align-items-center">
                                    <div class="bg-primary bg-opacity-10 rounded-3 p-2 me-2">
                                        <i class="bx bx-male text-primary fs-6"></i>
                                    </div>
                                    <span class="fw-medium text-dark">Homme</span>
                                </div>
                            {% elseif client.sexe == 'F' %}
                                <div class="d-flex align-items-center">
                                    <div class="bg-danger bg-opacity-10 rounded-3 p-2 me-2">
                                        <i class="bx bx-female text-danger fs-6"></i>
                                    </div>
                                    <span class="fw-medium text-dark">Femme</span>
                                </div>
                            {% else %}
                                {% set randomSex = (loop.index0 % 2 == 0) ? 'M' : 'F' %}
                                {% if randomSex == 'M' %}
                                    <div class="d-flex align-items-center">
                                        <div class="bg-primary bg-opacity-10 rounded-3 p-2 me-2">
                                            <i class="bx bx-male text-primary fs-6"></i>
                                        </div>
                                        <span class="fw-medium text-dark">Homme</span>
                                    </div>
                                {% else %}
                                    <div class="d-flex align-items-center">
                                        <div class="bg-danger bg-opacity-10 rounded-3 p-2 me-2">
                                            <i class="bx bx-female text-danger fs-6"></i>
                                        </div>
                                        <span class="fw-medium text-dark">Femme</span>
                                    </div>
                                {% endif %}
                            {% endif %}
                        </td>
                        <td class="py-3 text-center">
                            <div class="d-flex justify-content-center gap-1">
                                <a href="{{ path('app_client_show', {'id': client.id}) }}"
                                   class="btn btn-sm btn-light rounded-circle d-flex align-items-center justify-content-center"
                                   style="width: 32px; height: 32px;"
                                   title="Voir les détails">
                                    <i class="bx bx-show text-primary"></i>
                                </a>
                                <a href="{{ path('app_client_edit', {'id': client.id}) }}"
                                   class="btn btn-sm btn-light rounded-circle d-flex align-items-center justify-content-center"
                                   style="width: 32px; height: 32px;"
                                   title="Modifier">
                                    <i class="bx bx-edit-alt text-success"></i>
                                </a>
                                <form method="post" action="{{ path('app_client_delete', {'id': client.id}) }}"
                                      onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce client ?');" class="d-inline">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ client.id) }}">
                                    <button type="submit" 
                                            class="btn btn-sm btn-light rounded-circle d-flex align-items-center justify-content-center"
                                            style="width: 32px; height: 32px;" 
                                            title="Supprimer">
                                        <i class="bx bx-trash text-danger"></i>
                                    </button>
                                </form>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6" class="text-center py-5">
                            <div class="py-4">
                                <div class="mb-3">
                                    <i class="bx bx-user-x text-muted" style="font-size: 4rem;"></i>
                                </div>
                                <h6 class="text-muted mb-2">Aucun client enregistré</h6>
                                <p class="text-muted small mb-4">Commencez par ajouter votre premier client</p>
                                <a href="{{ path('app_client_new') }}" class="btn btn-primary shadow-sm rounded-3 px-4 py-2 fw-semibold">
                                    <i class="bx bx-plus-circle me-2"></i>Ajouter un client
                                </a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        
        <!-- Pagination -->
        {% if clients|length > 0 %}
        <div class="card-footer bg-white border-0 py-3">
            <div class="d-flex justify-content-between align-items-center">
                <div class="text-muted small">
                    Affichage de 1 à {{ clients|length }} sur {{ clients|length }} clients
                </div>
                <nav>
                    <ul class="pagination pagination-sm mb-0">
                        <li class="page-item disabled">
                            <span class="page-link border-0 bg-transparent">Précédent</span>
                        </li>
                        <li class="page-item active">
                            <span class="page-link bg-primary border-primary">1</span>
                        </li>
                        <li class="page-item disabled">
                            <span class="page-link border-0 bg-transparent">Suivant</span>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
        {% endif %}
    </div>
</div>

{% endblock %}
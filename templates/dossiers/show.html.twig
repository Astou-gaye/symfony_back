{% extends 'base.html.twig' %}

{% block title %}Détails du dossier{% endblock %}

{% block page_title %}Détails du dossier{% endblock %}

{% block body %}
<div class="card">
  <div class="card-header">
    <h5 class="mb-0">Informations sur le dossier</h5>
  </div>
  <div class="card-body">
    <table class="table table-bordered">
      <tbody>
        <tr>
          <th>Client</th>
          <td>
            {% if dossier.clients %}
              {{ dossier.clients.prenom }} {{ dossier.clients.nom }}
            {% else %}
              <em>Aucun client associé</em>
            {% endif %}
          </td>
        </tr>
        <tr>
          <th>Passeport</th>
          <td>{{ dossier.passeport }}</td>
        </tr>
        <tr>
          <th>Visa</th>
          <td>{{ dossier.visa }}</td>
        </tr>
        <tr>
          <th>Carnet Santé</th>
          <td>{{ dossier.carnetSante }}</td>
        </tr>
        <tr>
          <th>Photo Identité</th>
          <td>{{ dossier.photoIdentite }}</td>
        </tr>
      </tbody>
    </table>
    <a href="{{ path('app_dossiers_index') }}" class="btn btn-secondary">Retour à la liste</a>
    <a href="{{ path('app_dossiers_edit', {'id': dossier.id}) }}" class="btn btn-warning">Modifier</a>
    <form method="post" action="{{ path('app_dossiers_delete', {'id': dossier.id}) }}" style="display:inline-block;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce dossier ?');">
      <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ dossier.id) }}">
      <button class="btn btn-danger">Supprimer</button>
    </form>
  </div>
</div>
{% endblock %}

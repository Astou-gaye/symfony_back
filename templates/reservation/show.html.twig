{% extends 'base.html.twig' %}

{% block title %}Réservation{% endblock %}
{% block page_title %}Détail réservation{% endblock %}
{% block body %}
<div class="card">
  <div class="card-header d-flex justify-content-between align-items-center">
    <span class="fw-bold">Informations réservation</span>
    <div>
      <a href="{{ path('app_reservation_edit', {'id': reservation.id}) }}" class="btn btn-sm btn-outline-secondary"><i class="bx bx-edit"></i> Modifier</a>
      <a href="{{ path('app_reservation_index') }}" class="btn btn-sm btn-outline-primary"><i class="bx bx-arrow-back"></i> Retour</a>
    </div>
  </div>
  <div class="card-body">
    <table class="table mb-0">
      <tbody>
        <tr><th>Id</th><td>{{ reservation.id }}</td></tr>
        <tr><th>Date réservation</th><td>{{ reservation.dateReservation ? reservation.dateReservation|date('Y-m-d') : '' }}</td></tr>
        <tr><th>Client</th><td>{{ reservation.client.prenom }} {{ reservation.client.nom }}</td></tr>
        <tr><th>Type</th><td>{{ reservation.type }}</td></tr>
        <tr><th>Status</th><td>{{ reservation.status }}</td></tr>
      </tbody>
    </table>
    <div class="mt-3">
      {{ include('reservation/_delete_form.html.twig') }}
    </div>
  </div>
</div>
{% endblock %}

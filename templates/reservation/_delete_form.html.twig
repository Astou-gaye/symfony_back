<form method="post" action="{{ path('app_reservation_delete', {'id': reservation.id}) }}" 
      onsubmit="return confirm('Êtes-vous absolument sûr de vouloir supprimer cette réservation ? Cette action est irréversible et supprimera définitivement toutes les données associées.');" 
      class="d-inline">
  <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reservation.id) }}">
  <button type="submit" 
          class="btn btn-outline-danger btn-sm shadow-sm rounded-3 px-3 py-2 fw-semibold border-2
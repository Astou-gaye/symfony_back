{% extends 'base.html.twig' %}

{% block title %}Paiement{% endblock %}
{% block page_title %}Détail paiement{% endblock %}
{% block body %}
<div class="card">
  <div class="card-header d-flex justify-content-between align-items-center">
    <span class="fw-bold">Informations paiement</span>
    <div>
      <a href="{{ path('app_paiement_edit', {'id': paiement.id}) }}" class="btn btn-sm btn-outline-secondary"><i class="bx bx-edit"></i> Modifier</a>
      <a href="{{ path('app_paiement_index') }}" class="btn btn-sm btn-outline-primary"><i class="bx bx-arrow-back"></i> Retour</a>
    </div>
  </div>
  <div class="card-body">
    <table class="table mb-0">
      <tbody>
        <tr><th>Id</th><td>{{ paiement.id }}</td></tr>
        <tr><th>Montant payé</th><td>{{ paiement.montantPaye }}</td></tr>
        <tr><th>Date paiement</th><td>{{ paiement.datePaiement ? paiement.datePaiement|date('Y-m-d') : '' }}</td></tr>
        <tr><th>Mode paiement</th><td>{{ paiement.modePaiement }}</td></tr>
        <tr><th>Status paiement</th><td>{{ paiement.statusPaiement }}</td></tr>
        <tr><th>Reçu</th><td>{{ paiement.recu }}</td></tr>
      </tbody>
    </table>
    <div class="mt-3">
      {{ include('paiement/_delete_form.html.twig') }}
    </div>
  </div>
</div>
{% endblock %}

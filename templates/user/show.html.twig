{% extends 'base.html.twig' %}

{% block title %}Utilisateur{% endblock %}
{% block page_title %}DÃ©tail utilisateur{% endblock %}
{% block body %}
<div class="card">
  <div class="card-header d-flex justify-content-between align-items-center">
    <span class="fw-bold">Informations utilisateur</span>
    <div>
      <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-sm btn-outline-secondary"><i class="bx bx-edit"></i> Modifier</a>
      <a href="{{ path('app_user_index') }}" class="btn btn-sm btn-outline-primary"><i class="bx bx-arrow-back"></i> Retour</a>
    </div>
  </div>
  <div class="card-body">
    <table class="table mb-0">
      <tbody>
        <tr><th>Id</th><td>{{ user.id }}</td></tr>
        <tr><th>Email</th><td>{{ user.email }}</td></tr>
        <tr><th>Roles</th><td>{{ user.roles ? user.roles|json_encode : '' }}</td></tr>
        <tr><th>Password</th><td>{{ user.password }}</td></tr>
      </tbody>
    </table>
    <div class="mt-3">
      {{ include('user/_delete_form.html.twig') }}
    </div>
  </div>
</div>
{% endblock %}

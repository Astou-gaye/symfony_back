{% extends 'base.html.twig' %}

{% block title %}Sessions{% endblock %}
{% block page_title %}Liste des sessions{% endblock %}
{% block body %}
<div class="card">
  <div class="card-header d-flex justify-content-between align-items-center">
    <span class="fw-bold">Sessions</span>
    <a href="{{ path('app_session_new') }}" class="btn btn-primary btn-sm"><i class="bx bx-plus"></i> Nouvelle session</a>
  </div>
  <div class="table-responsive">
    <table class="table table-hover align-middle mb-0">
      <thead class="table-light">
        <tr>
          <th>Id</th>
          <th>Nombre de places</th>
          <th>Date début</th>
          <th>Date fin</th>
          <th>Prix forfait</th>
          <th>Voyage</th>
          <th>Date inscription</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
      {% for session in sessions %}
        <tr>
          <td>{{ session.id }}</td>
          <td>{{ session.nombresPlaces }}</td>
          <td>{{ session.dateDebut ? session.dateDebut|date('Y-m-d') : '' }}</td>
          <td>{{ session.dateFin ? session.dateFin|date('Y-m-d') : '' }}</td>
          <td>{{ session.prixForfait }}</td>
          <td>{{ session.voyage.typeVoyage }}</td>
          <td>{{ session.dateInscription ? session.dateInscription|date('Y-m-d') : '' }}</td>
          <td>
            <a href="{{ path('app_session_show', {'id': session.id}) }}" class="btn btn-sm btn-outline-info"><i class="bx bx-show"></i></a>
            <a href="{{ path('app_session_edit', {'id': session.id}) }}" class="btn btn-sm btn-outline-secondary"><i class="bx bx-edit"></i></a>
          </td>
        </tr>
      {% else %}
        <tr>
          <td colspan="7" class="text-center text-muted">Aucune session trouvée</td>
        </tr>
      {% endfor %}
      </tbody>
    </table>
  </div>
</div>
{% endblock %}

<form method="post" action="{{ path('app_session_delete', {'id': session.id}) }}" 
      onsubmit="return confirm('Êtes-vous absolument sûr de vouloir supprimer cette session ? Cette action ne peut pas être annulée. Toutes les réservations associées seront également supprimées.');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ session.id) }}">
    <button type="submit" class="btn btn-outline-danger btn-sm fw-semibold w-100">
        <i class="bx bx-trash me-2"></i>
        Supprimer définitivement
    </button>
</form>

<style>
/* Style spécifique pour le bouton de suppression */
.btn-outline-danger {
    border-color: #dc3545;
    color: #dc3545;
    font-weight: 600;
    transition: all 0.3s ease;
}

.btn-outline-danger:hover {
    background-color: #dc3545;
    border-color: #dc3545;
    color: white;
    transform: translateY(-1px);
    box-shadow: 0 4px 8px rgba(220, 53, 69, 0.3);
}

.btn-outline-danger:focus {
    box-shadow: 0 0 0 0.2rem rgba(220, 53, 69, 0.25);
}
</style>